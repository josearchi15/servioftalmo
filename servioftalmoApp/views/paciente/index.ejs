          <div class="card-body">
            <h5 class="card-title">
              <%= paciente.Nombres %>
            </h5>
            <a href="/pacientes/<%= paciente.Id_paciente %>" class="btn btn-primary">More Info</a>
          </div>
        </div>

      </div>



      <% }) %>

  </div>
