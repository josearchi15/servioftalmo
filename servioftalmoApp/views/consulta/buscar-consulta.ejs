<%- include("../partials/header") %>
  <div class="container">
    <div class="search-form">
      <h2 class="text-center">Buscar Consulta</h2>
      <form id="searchForm">
        <div class="form-group">
          <label for="searchParameter">Id Consulta / DPI</label>
          <input type="number" class="form-control" id="searchId" placeholder="Ingrese Id Consulta o DPI" required>
        </div>
        <button type="submit" class="btn btn-primary btn-block">Buscar</button>
      </form>
      <div id="searchResult" class="mt-4"></div>
    </div>

    <!-- Tabla para Listar Consultas -->
    <div id="listContainer" class="mt-5">
      <h2>Lista de Consultas</h2>
      <table class="table table-bordered">
        <thead>
          <tr>
            <th>ID</th>
            <th>Nombres</th>
            <th>Apellidos</th>
            <th>DPI</th>
            <th>Acciones</th>
          </tr>
        </thead>
        <tbody id="patientTableBody">
          <!-- Filas de pacientes se insertarán aquí -->
          <% if(Consultas) { %>
            <tr>
              <% Consultas.forEach(paciente=> { %>
                <td>
                  <%= paciente.Id_paciente %>
                </td>
                <td>
                  <%= paciente.Nombres %>
                </td>
                <td>
                  <%= paciente.Apellidos %>
                </td>
                <td>
                  <%= paciente.DPI %>
                </td>
                <td>
                  <form class="succes-form" action="/pacientes/<%= paciente.Id_paciente %>?_method=PUT" method="GET">
                    <button class="btn btn-sm btn-primaey btn-block">Editar</button>
                  </form>
                  <form class="delete-form" action="/pacientes/<%= paciente.Id_paciente %>?_method=DELETE"
                    method="POST">
                    <button class="btn btn-sm btn-danger">Eliminar</button>
                  </form>
                </td>
            </tr>

            <% }) %>
              <% } %>
        </tbody>
      </table>
    </div>
  </div>
  <%- include("../partials/footer") %>